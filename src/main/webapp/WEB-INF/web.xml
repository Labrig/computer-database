<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.map</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.eot</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.svg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.ttf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.woff</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.otf</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DashboardServlet</display-name>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>fr.excilys.servlet.DashboardServlet</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>AddComputerServlet</display-name>
    <servlet-name>AddComputerServlet</servlet-name>
    <servlet-class>fr.excilys.servlet.AddComputerServlet</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>DeleteComputerServlet</display-name>
    <servlet-name>DeleteComputerServlet</servlet-name>
    <servlet-class>fr.excilys.servlet.DeleteComputerServlet</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>EditComputerServlet</display-name>
    <servlet-name>EditComputerServlet</servlet-name>
    <servlet-class>fr.excilys.servlet.EditComputerServlet</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>FindComputerByNameServlet</display-name>
    <servlet-name>FindComputerByNameServlet</servlet-name>
    <servlet-class>fr.excilys.servlet.FindComputerByNameServlet</servlet-class>
  </servlet>
  
  <listener>
      <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <context-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>fr.excilys.config.SpringConfiguration</param-value>
  </context-param>

  <context-param>
      <param-name>contextClass</param-name>
      <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  </context-param>
  
</web-app>